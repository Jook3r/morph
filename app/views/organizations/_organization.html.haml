- highlight = {} unless defined?(highlight) && highlight

= link_to organization, class: "list-group-item" do
  %article.owner-item.media
    .media-left
      = owner_image(organization, size: 60, show_tooltip: false)
    .media-body
      %h2.media-heading.h4
        - if organization.name.present?
          = highlight[:name] ? sanitize_highlight(highlight[:name]) : organization.name
        - else
          = highlight[:nickname] ? sanitize_highlight(highlight[:nickname]) : organization.nickname

      %strong.owner-nickname= highlight[:nickname] ? sanitize_highlight(highlight[:nickname]) : organization.nickname
      - if organization.company.present?
        %div= highlight[:company] ? sanitize_highlight(highlight[:company]) : organization.company
