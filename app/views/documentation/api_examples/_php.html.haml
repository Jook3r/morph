%p Use the following code snippet to get data from the API.

- block = capture do
  :coderay
    #!php
    <?php
    $morph_api_url = "[scraper_url]/data.json";
    $morph_api_key = "[api_key]";

    $query = "[query]";

    $response = file_get_contents($morph_api_url.'?key='.$morph_api_key.'&query='.urlencode($query));
    $js = json_decode($response,true);

    print_r($js);
    ?>

= substitute_api_params(block, scraper: scraper, user: current_user, query: query)
