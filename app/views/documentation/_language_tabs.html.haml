-# Show some documentation for each language in a set of tabs
-# Pass in "id_prefix" and "path"
%div
  %ul.nav.nav-tabs{ role: "tablist" }
    - Morph::Language.languages_supported.each_with_index do |l, i|
      %li{ role: "presentation", class: ("active" if i.zero?) }
        = link_to "##{id_prefix}-#{l.key}", "aria-controls" => "##{id_prefix}-#{l.key}", role: "tab", "data-toggle" => "tab" do
          = language_name_with_icon(l.key, size: "20x20")

  .tab-content
    - Morph::Language.languages_supported.each_with_index do |l, i|
      .tab-pane{ role: "tabpanel", id: "#{id_prefix}-#{l.key}", class: ("active" if i.zero?) }
        = render "#{path}/#{l.key}"
