= simple_form_for scraper, url: github_scrapers_path do |f|
  = f.input :full_name,
            as: :radio_buttons,
            collection: Morph::Github.public_repos(current_user, owner).map { |r| [radio_description(r), r.full_name, { disabled: Scraper.exists?(full_name: r.full_name) }] },
            label: false,
            include_blank: false,
            input_html: { class: "owner_#{h owner.nickname}" }
  = f.button :submit, "Add Scraper", id: "#{h owner.nickname}_scraper_submit_action"

:javascript
  $("##{h owner.nickname}_scraper_submit_action").attr("disabled", true);
  $("input[type=radio].owner_#{h owner.nickname}").change(function(){
    $("##{h owner.nickname}_scraper_submit_action").attr("disabled", false);
  });
